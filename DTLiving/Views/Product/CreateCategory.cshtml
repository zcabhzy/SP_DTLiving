@model DTLiving.Models.Category;

@{
    ViewData["Title"] = "Creategory";
}

<form asp-action="CreateCategory" method="post" id="CateCategoryForm">

    <h2>新增品牌</h2>

    <div class="row">
        <div class="col">
            <button class="btn btn-secondary" asp-action="Create" asp-controller="Product">Create</button>
            <button class="btn btn-secondary" asp-action="Index" asp-controller="Product">Back To List</button>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col">
            <div class="form-group">
                <input asp-for="CategoryName" class="form-control" style="width:300px;" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
    </div><br />

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-dark">Create</button>
        </div>
    </div>

</form>