{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  /*
    AllowedHosts : 允許所有主機訪問應用程式
    ConnectionStrings : 資料庫連線字串
  */
  "AllowedHosts": "*",
  "ConnectionStrings": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=Local;Integrated Security=True",
  "config": {
    /*
      JwtKey : JWT 密鑰,必須是安全的隨機字串，確保 JWT 的完整性
      JwtIssuer : 發行者(Issuer)，表示生成和簽署 JWT 的名稱
      JwtAudience : 觀眾(Audience)，表示 JWT 預期的接收者
      JwtExpireDays : JWT 過期時間(預設為"天") => 30 天內過期
    */
    "JwtKey": "UHJTFRTYUY787FVGHMJYAERvlkuytnbf",
    "JwtExpireDays": 30,
    "JwtIssuer": "HelpHubAdminPanel",
    "JwtAudience": "SecureApplicationUser"
  }
}
